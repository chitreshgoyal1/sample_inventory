<div class="nested-fields">
  <fieldset>
    <legend>Problem</legend>
    <p>
      <%= f.label :device_problem, "Problem" %><br />
      <%= f.text_field :device_problem %>
    </p>
    <p>
      <%= f.label :device_problem_status, "Status" %><br />
      <%= f.collection_select(:device_problem_status_id, DeviceProblemStatus.all, :id, :device_problem_status, :prompt => true) %>
    </p>
    <p>
      <%= f.label :comment, "Comment" %><br />
      <%= f.text_area :comment, :rows => 3 %>
    </p>
    <%= link_to_remove_association "Remove Problem", f %>
  </fieldset>
</div>
