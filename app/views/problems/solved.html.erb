<h1>Listing devices</h1>

<table>
  <tr>
    <th>Device status</th>
    <th>Device type</th>
    <th>Serial number</th>
    <th>Comment</th>
    <th>Imsi</th>
    <th>Iccid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.device_status_id %></td>
    <td><%= device.device_type_id %></td>
    <td><%= device.serial_number %></td>
    <td><%= device.comment %></td>
    <td><%= device.imsi %></td>
    <td><%= device.iccid %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
